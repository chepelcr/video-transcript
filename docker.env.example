# Docker Environment Configuration
# Copy this file to .env for local Docker development

# Database Configuration (for production deployment)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/videoscript_dev

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (AWS SES or SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password

# Payment Providers
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# External Services
VITE_PYTHON_API_URL=http://localhost:8000

# Frontend Configuration (if running frontend in container)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_API_BASE_URL=http://localhost:5000